<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="org.szcloud.framework.unit.core.domain.SysDataSource">
	<resultMap id="BaseResultMap" type="org.szcloud.framework.unit.core.domain.SysDataSource">
				<result property="id" jdbcType="BIGINT"		column="ID"/>
				<result property="dataSourceId" jdbcType="BIGINT"		column="DATASOURCE_ID"/>
				<result property="systemId" jdbcType="BIGINT"	column="SYSTEM_ID"/>
				<result property="isDefault" jdbcType="TINYINT"	column="ISDEFAULT"/>
	</resultMap>
	
	
	
	<sql id="Base_Column_List">
		ID,	DATASOURCE_ID,SYSTEM_ID,ISDEFAULT
	</sql>

	<select id="queryList" resultMap="BaseResultMap" parameterType="Object">
		select
		<include refid="Base_Column_List" />
		from fw_sys_datasource
		<include refid="EQ_Where_Clause" />
	</select>

	<sql id="Select_Example_Where_Clause">
		<where>
			<foreach collection="oredCriteria" item="criteria" separator="or">
				<if test="criteria.valid">
					<trim prefix="(" suffix=")" prefixOverrides="and">
						<foreach collection="criteria.criteria" item="criterion">
							<choose>
								<when test="criterion.noValue">
									and ${criterion.condition}
								</when>
								<when test="criterion.singleValue">
									and ${criterion.condition} #{criterion.value}
								</when>
								<when test="criterion.betweenValue">
									and ${criterion.condition} #{criterion.value}
									and
									#{criterion.secondValue}
								</when>
								<when test="criterion.listValue">
									and ${criterion.condition}
									<foreach collection="criterion.value" item="listItem"
										open="(" close=")" separator=",">
										#{listItem}
									</foreach>
								</when>
							</choose>
						</foreach>
					</trim>
				</if>
			</foreach>
		</where>
	</sql>
		<!-- 查询记录总数 -->
	<select id="queryCountByExample" resultType="INTEGER" 
		parameterType="org.szcloud.framework.core.domain.BaseExample">
		select count(*) as C from (
		select
		<if test="distinct">
			distinct
		</if>
		<include refid="Base_Column_List" />
		from fw_sys_datasource
		<if test="_parameter != null">
			<include refid="Select_Example_Where_Clause" />
		</if>
		) tmpcount
		
	</select>
	<!-- 查询条件 -->
	<sql id="EQ_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="id != null and id != ''">
				and ID = #{id}
			</if>
			<if test="dataSourceId != null and dataSourceId != ''">
				and DATASOURCE_ID = #{dataSourceId}
			</if>
			<if test="systemId != null and systemId != ''">
				and SYSTEM_ID = #{systemId}
			</if>
			<if test="isDefault != null and isDefault != ''">
				and ISDEFAULT = #{isDefault}
			</if>
		</trim>
	</sql>
	
	<!-- 模糊查询 -->
	<select id="selectByExample" resultMap="BaseResultMap"
		parameterType="org.szcloud.framework.core.domain.BaseExample">
		select
		<if test="distinct">
			distinct
		</if>
		<include refid="Base_Column_List" />
		from fw_sys_datasource
		<if test="_parameter != null">
			<include refid="Select_Example_Where_Clause" />
		</if>
		<if test="orderByClause != null">
			order by ${orderByClause}
		</if>
		<if test="start !=0 or limit!=0">
			limit #{start},#{limit}
		</if>
	</select>
	
	<select id="get" parameterType="java.lang.Long" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM fw_sys_datasource
		WHERE
		ID = #{id} 
	</select>
	<!-- 查询所有的ID -->
	<select id="findAllIds" resultType="java.lang.Long">
		SELECT
		ID FROM fw_sys_datasource
	</select>

	<!-- 按Id删除 -->
	<delete id="remove" parameterType="java.lang.Long">
		DELETE FROM fw_sys_datasource
		WHERE
		ID =
		#{id} 
	</delete>
	<!-- 插入 -->
	<insert id="insert" useGeneratedKeys="true"
		keyProperty="id">
		INSERT INTO fw_sys_datasource (
		ID,
		SYSTEM_ID,
		DATASOURCE_ID,
		ISDEFAULT
		) VALUES (
		#{id},
		#{systemId},
		#{dataSourceId},
		#{isDefault}
		)
	</insert>

	<select id="countAll" resultType="java.lang.Integer">
		SELECT
		count(ID) FROM fw_sys_datasource
	</select>

	<select id="getAll" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM fw_sys_datasource
	</select>

	<!-- 更新 -->
	<update id="updateSelective" parameterType="org.szcloud.framework.unit.core.domain.SysDataSource">
		UPDATE fw_sys_datasource
		<set>
			<if test="id != null and id != ''">
				and ID = #{id}
			</if>
			<if test="dataSourceId != null and dataSourceId != ''">
				and DATASOURCE_ID = #{dataSourceId}
			</if>
			<if test="systemId != null and systemId != ''">
				and SYSTEM_ID = #{systemId}
			</if>
			<if test="isDefault != null and isDefault != ''">
				and ISDEFAULT = #{isDefault}
			</if>
		</set>
		WHERE
		ID = #{id}	</update>

	<update id="update" parameterType="org.szcloud.framework.unit.core.domain.SysDataSource">
		UPDATE fw_sys_datasource SET
		SYSTEM_ID = #{systemId},
		DATASOURCE_ID = #{dataSourceId},
		ISDEFAULT=#{isDefault}
		WHERE
		ID = #{id} 	</update>
	

	
	<delete id="removeByExample" parameterType="org.szcloud.framework.core.domain.BaseExample">
		DELETE FROM fw_sys_datasource
		<if test="_parameter != null">
			<include refid="Select_Example_Where_Clause" />
		</if>
	</delete>
</mapper>

