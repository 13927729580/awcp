<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="cn.org.awcp.metadesigner.core.domain.MetaModelChart">
	
	<resultMap id="rm" type="cn.org.awcp.metadesigner.core.domain.MetaModelChart">
		<id property="id" jdbcType="BIGINT" column="id"/>
		<result property="chartContext" jdbcType="VARCHAR" column="chartContext"/>
		<result property="chartInfo" jdbcType="VARCHAR" column="chartInfo"/>
		<result property="chartName" jdbcType="VARCHAR" column="chartName"/>
		<result property="classId" jdbcType="BIGINT" column="classId"/>
	</resultMap>
	<sql id="Base_Column_List">
		id,chartContext,chartInfo,chartName,classId
	</sql>
	
	<select id="getAll" resultMap="rm">
		select <include refid="Base_Column_List"/> from fw_mm_metamodelchart
	</select>
	
	<insert id="insert" parameterType="Object">
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into fw_mm_metamodelchart(chartContext,chartInfo,chartName,classId)
		value(#{chartContext},#{chartInfo},#{chartName},#{classId})
	</insert>
	
	<!-- 根据属性查询 -->
	<select id="get" parameterType="Object" resultMap="rm">
		select <include refid="Base_Column_List"/> from fw_mm_metamodelchart
	</select>
	
	<update id="update" parameterType="cn.org.awcp.metadesigner.core.domain.MetaModelChart">
		UPDATE fw_mm_metamodelchart SET
			chartContext=#{chartContext},
			chartInfo=#{chartInfo},
			chartName=#{chartName},
			classId=#{classId}
		WHERE 
			id = #{id} 
	</update>
	
	<select id="queryByClassId" resultMap="rm" parameterType="Object">
		select <include refid="Base_Column_List"/> from fw_mm_metamodelchart where classId=#{classId}
	</select>
	
</mapper>

